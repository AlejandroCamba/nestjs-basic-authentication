{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "rootDir": "./",
    "baseUrl": "./",
    "incremental": true,
    "paths": {
      "@root/*": ["src/*"],
      "@models/*": ["src/models/*"],
      "@modules/*": ["src/modules/*"],
      "@tests/*": ["tests/*"]
    },
    "typeRoots": ["node_modules/@types", "types"]
  },
  "exclude": ["node_modules", "dist"]
}
